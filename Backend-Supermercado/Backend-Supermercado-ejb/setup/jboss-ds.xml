<?xml version="1.0" encoding="UTF-8"?>
<datasources>
    <datasource
        jndi-name="java:/backendDS" pool-name="backendDS"
        enabled="true" jta="true"
        use-java-context="true" use-ccm="true">
        <connection-url>
            jdbc:mysql://localhost:3306/supermercado?zeroDateTimeBehavior=convertToNull
        </connection-url>
        <driver>
            mysql
        </driver>
        <security>
            <user-name>
                root
            </user-name>
            <password>
            </password>
        </security>
        <statement>
            <prepared-statement-cache-size>
                100
            </prepared-statement-cache-size>
            <share-prepared-statements/>
        </statement>
    </datasource>
</datasources>
